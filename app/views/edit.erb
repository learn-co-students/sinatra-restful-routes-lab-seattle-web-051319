<h1>Edit <%=@recipe.name%>!</h1>
<form action="/recipes/<%=@recipe.id%>/edit" method="POST">
    <label for="name">Name</lable>
    <input type="text" name="name" value= <%="#{@recipe.name}"%>><br>
    <label for="ingredients">Ingredients</lable>
    <input type="text" name="ingredients" value= <%="#{@recipe.ingredients}"%>><br>
    <label for="cook_time">Cook Time</lable>
    <input type="text" name="cook_time" value= <%="#{@recipe.cook_time}"%>><br>
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <input type="submit" id="Submit" value="Edit">
</form>